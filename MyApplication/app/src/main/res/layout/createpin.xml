<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwka"
    android:orientation="vertical"
    tools:context=".LogIn">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="192px"
            android:layout_height="214px"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_marginTop="298px"/>
        <TextView
            android:layout_marginTop="16px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создайте\n пин-код"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="72px"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="48px"
            android:layout_height="48px"
            android:background="@drawable/progempty"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="72px"
            android:background="@drawable/progempty"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="72px"
            android:background="@drawable/progempty"/>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="72px"
            android:background="@drawable/progempty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="254dp"
        android:layout_gravity="center"
        android:background="@drawable/numpadbg"
        android:backgroundTint="@color/bg3"
        android:orientation="vertical"
        android:layout_marginTop="16px">

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_marginTop="36px">

            <Button
                android:id="@+id/btn1"
                android:layout_width="190px"
                android:layout_height="150px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="1"
                android:textSize="72px"
                android:layout_marginLeft="24px"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="190px"
                android:layout_height="150px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="2"
                android:textSize="72px"

                android:layout_marginLeft="75px"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="190px"
                android:layout_height="150px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="3"
                android:textSize="72px"
                android:textStyle="italic"
                android:layout_marginLeft="75px"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="24px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="4"
                android:textSize="72px"
                android:textStyle="italic"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="75px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="5"
                android:textSize="72px"
                android:textStyle="italic"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="75px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="6"
                android:textSize="72px"
                android:textStyle="italic"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="24px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="7"
                android:textSize="72px"

                android:textStyle="italic"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="75px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="8"
                android:textSize="72px"
                android:textStyle="italic"

                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="190px"
                android:layout_height="150px"
                android:layout_marginLeft="75px"
                android:layout_marginTop="64px"
                android:background="@drawable/numpadcp"
                android:onClick="onClick"
                android:text="9"
                android:textSize="72px"
                android:textStyle="italic"

                android:textColor="@color/black"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60px">

    </LinearLayout>
</LinearLayout>